[core]
nick = <%= @nick %>
host = <%= @host %>
use_ssl = <%= @use_ssl %>
port = <%= @port %>
<% if @owner -%>
owner = <%= @owner %>
<% end -%>

channels = <%= @channels.join(',') %>

<% if @auth_method -%>
auth_method = <%= @auth_method %>
<% end -%>

<% if @auth_password -%>
auth_password = <%= @auth_password %>
<% end -%>

homedir = <%= @homedir %>

<% if @enable -%>
enable = <%= @enable.join(',') %>
<% end -%>
